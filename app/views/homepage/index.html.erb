<h1>HomePage</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><b>Board name</b></td>
      <td><b>Creator</b></td>
      <td><b>Created Date</b></td>
    </tr>
    <% @mine_boards.each do |mine_board| %>
      <tr>
        <td><%= link_to mine_board.name, mine_board %></td>
        <td><%= mine_board.creator_email %></td>
        <td><%= mine_board.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'View all boards', mine_boards_path %>
