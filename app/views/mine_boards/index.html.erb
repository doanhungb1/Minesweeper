<p id="notice"><%= notice %></p>

<h1>Mine Boards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mine_boards.each do |mine_board| %>
      <tr>
        <td><%= link_to 'Show', mine_board %></td>
        <td><%= link_to 'Edit', edit_mine_board_path(mine_board) %></td>
        <td><%= link_to 'Destroy', mine_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mine Board', new_mine_board_path %>
